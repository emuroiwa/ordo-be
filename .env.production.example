APP_NAME=ORDO
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_FOR_PRODUCTION
APP_DEBUG=false
APP_URL=https://api.ordo.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (use appropriate production DB)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ordo_production
DB_USERNAME=ordo_user
DB_PASSWORD=SECURE_DB_PASSWORD

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.ordo.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=ordo_

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=SECURE_REDIS_PASSWORD
REDIS_PORT=6379

# Production Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mailgun_username
MAIL_PASSWORD=your_mailgun_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ordo.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=ordo-production-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Production Configuration
SANCTUM_STATEFUL_DOMAINS=ordo.com,app.ordo.com,dashboard.ordo.com
SANCTUM_TOKEN_PREFIX=ordo_prod_

# Frontend Configuration
FRONTEND_URL=https://ordo.com
FRONTEND_URL_ADDITIONAL=https://app.ordo.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://ordo.com,https://app.ordo.com,https://dashboard.ordo.com

# Security Headers (implement in web server config)
# HSTS_MAX_AGE=31536000
# CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# Monitoring & Analytics
# SENTRY_LARAVEL_DSN=your_sentry_dsn
# BUGSNAG_API_KEY=your_bugsnag_key

# Rate Limiting
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_AUTH=60

VITE_APP_NAME="${APP_NAME}"